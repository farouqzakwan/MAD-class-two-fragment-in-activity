<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fragement.farouq.frgment.MainActivity">

    <fragment
        android:name="com.fragement.farouq.frgment.ToolbarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frgmentToolBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        tools:layout="@layout/fragment_toolbar" />

    <fragment
        android:name="com.fragement.farouq.frgment.TextFragemnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragmentText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/frgmentToolBar"
        tools:layout="@layout/fragment_text_fragemnt"
        android:layout_marginTop="100dp"/>

</RelativeLayout>
